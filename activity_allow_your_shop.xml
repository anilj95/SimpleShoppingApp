<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selfi_capture_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anil.shoppingApplication.SelfiCaptureRequestActivity">

    <include
        android:id="@+id/tool_bar_other_booking"
        layout="@layout/screen_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:background="#534c72">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"

        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="#EEE"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#0a0a0a"
                android:text="Do you allow 'YourShop'"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:textColor="#0a0a0a"
                android:text="to have one-time access"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#0a0a0a"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="40dp"
                android:text="to your identity?"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="OK"
                android:id="@+id/btn_oks"
                android:textColor="#FFF"
                android:background="#534c72"
                android:textSize="16sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/btn_cancel"
                android:text="CANCEL"
                android:layout_marginLeft="80dp"
                android:textColor="#FFF"
                android:background="#534c72"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>

